{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowImportingTsExtensions": null,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "noEmit": false,
    // "types": ["bun"],
    "outDir": "dist",
    "paths": {
      "@/api/*": [
        "../../apps/api/src/*"
      ]
    },
    "rootDir": "src",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "extends": "../typescript-config/tsconfig.base.json",
  "include": [
    "src"
  ],
  "watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "**/packages/web"
    ]
  }
}
